<Window x:Class="IskhakovaLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskhakovaLanguage"
        mc:Ignorable="d"
        Title="IskhakovaLanguage" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="Клиенты/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/Клиенты/school_logo.png" HorizontalAlignment="Left" />
        <TextBlock Text="Исхакова Language" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button x:Name="Back" Grid.Row="0" HorizontalAlignment="Right" Click="Back_Click" Content="Назад"></Button>
        <Frame Name="MainFrame"  Grid.Row="1" ContentRendered="MainFrame_ContentRendered"></Frame>
    </Grid>
        
</Window>
